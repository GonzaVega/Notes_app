# fi

# exec "${@}"

#!/bin/bash
set -e

# Espera a que Postgres estÃ© listo
until pg_isready -h db -U postgres; do
  echo "Esperando a PostgreSQL..."
  sleep 1
done

# Ejecuta migraciones si es necesario
bundle exec rails db:migrate 2>/dev/null || bundle exec rails db:setup

exec "$@"

